/* pages/cart/cart.wxss */

.cart-page {
  background-color: #f7f7f7;
  position: relative;
}

.receive-address-info {
  border-bottom: 1px solid rgba(187, 187, 187, .2);
  box-shadow: 0 1px 2px rgba(0, 0, 0, .1);
  background-color: #FFF;
  padding: 10px 5px;
  position: relative;
}

.address-tag {
  background-color: #d43b1e;
  color: #fff;
  font-size: 14px;
  display: inline-block;
  vertical-align: middle;
  padding: 0 3px;
}

.username {
  display: inline-block;
  vertical-align: middle;
  font-size: 14px;
  color: #101010;
  margin: 0 10px;
}

.phone-number {
  display: inline-block;
  vertical-align: middle;
  font-size: 14px;
  color: #101010;
}

.receive-address {
  font-size: 14px;
  color: #101010;
  margin-top: 10px;
  margin-right: 30px;
}

.arrow-right-btn {
  position: absolute;
  width: 20px;
  height: 20px;
  top: 50%;
  right: 5px;
  transform: translateY(-50%);
}

.cart-list {
  margin: 8px 0;
  padding: 0 5px 5px;
  background-color: #f7f7f7;
}

.cart-list-bg {
  background-color: #f7f7f7;
}

.cart-list-item {
  background-color: #fff;
  padding: 5px 0;
}

.handle-btn {
  background-color: #f7f7f7;
}

.left-side {
  float: left;
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
}

.product-image {
  width: 100px;
  height: 100px;
}

.right-side {
  width: calc(100% - 110px);
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 0 5px;
}

.cart-info-header {
  font-size: 16px;
  text-align: left;
  color: #101010;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.cart-info-box {
  width: 100%;
  height: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  margin: 5px 0;
}

.product-price {
  font-size: 14px;
  color: #d43b1e;
}

.product-count-info {
  float: right;
  display: flex;
  justify-content: flex-end;
  align-content: center;
  align-items: center;
}

.btn-count {
  width: 20px;
  height: 20px;
  padding: 0;
  font-size: 14px;
  font-weight: bold;
  text-align: center;
  line-height: 16px;
  border-radius: 100%;
  border: 1px solid rgba(0, 0, 0, .1);
}

.btn-minus {
  background-color: #fff;
  border: 1px solid rgba(211, 211, 211, 1.0);
  color: #d3d3d3;
}

.btn-add {
  background-color: #ffd700;
  border: 1px solid rgba(255, 215, 0, 1.0);
  color: #101010;
}

.count {
  font-size: 14px;
  color: #101010;
  margin: 0 4px;
}

.cart-info-bottom {
  font-size: 14px;
  color: #101010;
}

.product-number {
  font-size: 16px;
  font-weight: bold;
  color: #101010;
  margin-right: 4px;
}

.total-price-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 40px;
  background-color: #fff;
  border-top: 1px solid rgba(0, 0, 0, .1);
  display: flex;
  justify-content: space-between;
}

.total-price-bg {
  display: flex;
  justify-content: space-between;
  align-content: center;
  align-items: center;
  height: 100%;
  font-size: 14px;
  padding: 0 5px;
}

.total-price {
  margin-left: 5px;
  font-size: 18px;
  color: #d43b1e;
}

.submit {
  width: 100px;
  height: 100%;
  background-color: #d43b1e;
  font-size: 18px;
  font-weight: bold;
  color: #fff;
  line-height: 40px;
  text-align: center;
}
